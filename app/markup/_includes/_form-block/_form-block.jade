.watermark-right.right
	h2.settings__title.settings Настройки
	form(action="php/toserver.php" enctype="multipart/form-data" method="POST" id="theForm" name="theform").settings
		.form-input.delimiter
			.form-input-box
				label(for="").form__title.srcimg Исходное изображение
				.form-input__origin.form-input-style
					input(name="files[]" type="file"  id="baseImg").form-input__origin-file
					.form-input__fake.form-input__fake-base-img(qtip-content="Вы не выбрали изображение", qtip-position="left")
					label(for="baseImg").form-input__origin-icon
			.form-input-box
				label(for="").form__title.watermark Водяной знак
				.form-input__origin.form-input-style.disabled
					input(name="files[]" type="file" id="watermark" disabled).form-input__origin-file
					.form-input__fake.form-input__fake-watermark(qtip-content="Вы не выбрали изображение", qtip-position="left")
					label(for="watermark").form-input__origin-icon.disabled
		.form-position.delimiter(id="form-position")
			h5.form__title.position Положение
				//- блок для изменения видов
				.form-block
					label.form__view-item
						input(type="radio", name="placeaction", value="single", checked).form__view-link
					label.form__view-item
						input(type="radio", name="placeaction", value="tile").form__view-link
			.position__adjust.clearfix
				.position__adjust-radio.left
					- var items = ["topLeft", "topCenter", "topRight", "centerLeft", "centerCenter", "centerRight", "bottomLeft", "bottomCenter", "bottomRight"]
					each item in items
						label(for="", id="", class="label-position position__box-label label-position_" + item )
							span.out #{item}
							input(type="radio" name="position" value="#{item}" id="").radio-position.position__box-input
					.linePositions
						.linePosition-gorizont
						.linePosition-vertical
				.position__adjust-sett.right
					.position__adjust__sett-x
						label(for="inputX", id="").label-x.number__input-label X
						input(type="text" value="0" id="inputX").sett-x.left.number__input-x
						.sett-x__box.right
							.sett-up
								span.out Вверх
							.sett-down
								span.out Вниз
					.position__adjust__sett-y
						label(for="inputY", id="").label-y.number__input-label Y
						input(type="text" value="0" id="inputY").sett-y.left.number__input-y
						.sett-y__box.right
							.sett-up
								span.out Вверх
							.sett-down
								span.out Вниз
		.form-opacity.delimiter
			label(for="", id="").form__title.form__title-opacity.transparency Прозрачность
			.slider(id="slider", data-value="100")
		.buttons.clearfix
			.button__left.left
				button(type="reset" id="restBtn").button__reset.reset Сброс
			.button__right.right
				button(id="submitBtn", data-server="php/toserver.php", type="submit", disabled).button__submit.download.disabled Скачать